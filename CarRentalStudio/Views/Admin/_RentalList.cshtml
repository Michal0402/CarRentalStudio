@model IEnumerable<CarRentalStudio.Models.Rental>
<div style="margin-bottom: 10px;">
    <a href="#" id="add-rental-link" class="add-rental-link">Dodaj</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Samochód</th>
            <th>Klient</th>
            <th>Okres wypożyczenia</th>
            <th>Zarządzaj</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rental in Model)
        {
            <tr>
                <td>@rental.Id</td>
                <td>@rental.Car.Brand @rental.Car.Model</td>
                <td>@rental.Client.UserName</td>
                <td>@rental.RentalStart.ToString("yyyy-MM-dd")</td>
                <td>@rental.RentalEnd.ToString("yyyy-MM-dd")</td>
                <td>
                    <a href="@Url.Action("EditRental", "Admin", new { id = rental.Id })" class="edit-rental-link btn btn-warning">Edytuj</a>
                    <a href="@Url.Action("DeleteRental", "Admin", new { id = rental.Id })" class="delete-rental-link btn btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
